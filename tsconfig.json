
{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    // https://github.com/nestjs/nest/issues/81
    "skipLibCheck": true,
    "lib": ["es2017"],
    "target": "es6",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*",
    "libs",
  ]
}